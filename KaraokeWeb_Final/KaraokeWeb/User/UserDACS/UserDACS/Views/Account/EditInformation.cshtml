@model UserDACS.Models.User
@{
    ViewData["Title"] = "Chỉnh sửa thông tin";
}

<h2 class="text-warning mb-4">Chỉnh sửa thông tin cá nhân</h2>

<form asp-action="EditInformation" method="post">
    <div class="form-group mb-3">
        <label for="FullName">Họ và tên</label>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="Gender">Giới tính</label>
        <select asp-for="Gender" class="form-control">
            <option value="">-- Chọn giới tính --</option>
            <option value="Nam">Nam</option>
            <option value="Nữ">Nữ</option>
            <option value="Khác">Khác</option>
        </select>
    </div>

    <div class="form-group mb-3">
        <label for="DateOfBirth">Ngày sinh</label>
        <input asp-for="DateOfBirth" type="date" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="PhoneNumber">Số điện thoại</label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group mb-3">
        <label for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" />
    </div>

    <div class="form-group mb-3">
        <label for="Occupation">Nghề nghiệp</label>
        <input asp-for="Occupation" class="form-control" />
    </div>

    <div class="form-group mb-4">
        <label for="Address">Địa chỉ</label>
        <input asp-for="Address" class="form-control" />
    </div>

    <button type="submit" class="btn btn-warning">Lưu thay đổi</button>
    <a asp-action="Information" class="btn btn-secondary ms-2">Hủy</a>
</form>
