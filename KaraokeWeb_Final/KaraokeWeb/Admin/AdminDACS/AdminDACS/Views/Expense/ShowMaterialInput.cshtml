@model IEnumerable<AdminDACS.Models.MaterialInput>

@{
    ViewData["Title"] = "Danh sách nhập nguyên liệu";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Input ID</th>
            <th>Mã nguyên liệu</th>
            <th>Số lượng nhập</th>
            <th>Đơn giá nhập</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.InputId</td>
                    <td>@item.MaNL</td>
                    <td>@item.Quantity</td>
                    <td>@item.UnitPrice.ToString("C")</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">Chưa có dữ liệu nguyên liệu nhập</td>
            </tr>
        }
    </tbody>
</table>

<div style="text-align: right; margin-top: 20px;">
    <form asp-controller="Expense" asp-action="AddMaterial" method="get">
        <button type="submit" class="btn btn-primary">
            Nhập nguyên liệu
        </button>
    </form>
</div>
