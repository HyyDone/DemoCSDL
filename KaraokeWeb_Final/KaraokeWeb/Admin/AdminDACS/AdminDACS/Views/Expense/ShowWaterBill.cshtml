@model IEnumerable<AdminDACS.Models.WaterBill>

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Danh Sách Hóa Đơn Nước</title>
    <style>
    /* Reset cơ bản */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f9fafb;
        margin: 0;
        padding: 20px;
        color: #333;
    }

    header h2 {
        text-align: center;
        font-size: 32px;
        color: #1565c0;
        margin-bottom: 30px;
        animation: fadeInDown 0.8s ease forwards;
        opacity: 0;
    }

    keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .container {
        max-width: 960px;
        margin: 0 auto;
    }

    .alert-warning {
        padding: 15px 20px;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        color: #856404;
        border-radius: 8px;
        margin-bottom: 20px;
        text-align: center;
    }

    .bill-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
        gap: 20px;
        margin-bottom: 30px;
    }

    .bill-card {
        background-color: white;
        border-radius: 12px;
        padding: 20px;
        box-shadow: 0 3px 6px rgba(0,0,0,0.1);
        transition: box-shadow 0.3s ease, transform 0.3s ease;
        cursor: default;
        user-select: none;
    }

    .bill-card:hover {
        box-shadow: 0 10px 20px rgba(21, 101, 192, 0.3);
        transform: translateY(-5px);
    }

    .bill-title {
        font-weight: 700;
        font-size: 18px;
        margin-bottom: 12px;
        color: #1565c0;
    }

    .bill-info {
        font-size: 16px;
        margin-bottom: 8px;
    }

    /* Nút Xóa và Thêm */
    .btn {
        display: inline-block;
        padding: 10px 18px;
        border-radius: 8px;
        font-size: 15px;
        font-weight: 600;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease, transform 0.2s ease;
        text-decoration: none;
        color: white;
        user-select: none;
    }

    .btn-red {
        background-color: #d32f2f;
        margin-top: 10px;
    }

    .btn-red:hover {
        background-color: #9a2424;
        transform: scale(1.05);
    }

    .btn-add {
        background-color: #1565c0;
        margin-top: 10px;
        padding: 12px 28px;
        display: inline-block;
        text-align: center;
    }

    .btn-add:hover {
        background-color: #0d47a1;
        transform: scale(1.07);
    }
</style>

</head>
<body>
    <header>
        <h2>Danh Sách Hóa Đơn Nước</h2>
    </header>

    <div class="container">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert-warning">
                @ViewBag.ErrorMessage
            </div>
        }
        else
        {
            <div class="bill-grid">
                @foreach (var bill in Model)
                {
                    <div class="bill-card">
                        <div class="bill-title">Hóa Đơn @bill.MaBillWater</div>
                        <div class="bill-info"><strong>Ngày Xuất:</strong> @bill.Ngay.ToString("dd/MM/yyyy")</div>
                        <div class="bill-info"><strong>Số Tiền:</strong> @bill.SoTien.ToString("C")</div>

                        <!-- Form Xóa -->
                        <form asp-action="DeleteWaterBill" asp-controller="Expense" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@bill.MaBillWater" />
                            <button type="submit" class="btn btn-red" onclick="return confirm('Bạn có chắc chắn muốn xóa hóa đơn này?');">Xóa</button>
                        </form>
                    </div>
                }
            </div>

            <!-- Nút Thêm Hóa Đơn Điện -->
            <a href="@Url.Action("AddBillWater", "Expense")" class="btn btn-add">Thêm Hóa Đơn Nước</a>
        }
    </div>
</body>
</html>
