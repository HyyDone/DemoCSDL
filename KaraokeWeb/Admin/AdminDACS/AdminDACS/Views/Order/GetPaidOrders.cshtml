@model IEnumerable<AdminDACS.Models.Order>

<!DOCTYPE html>
<html lang="vi">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nhà hàng Delicieux</title>
</head>

@{
    ViewData["Title"] = "Danh sách đơn hàng";
}

<body>
    <header>
        <h2>@ViewData["Title"]</h2>
    </header>

    <div class="container">
        @foreach (var order in Model)
        {
            <div class="details-container">
                <h3>Đơn hàng #@order.OrderId</h3>
                <p><strong>Ngày tạo:</strong> @order.OrderDate.ToString("dd/MM/yyyy")</p>
                <p><strong>Số bàn:</strong> @order.MaPhong</p>
                <p><strong>Tổng tiền:</strong> @order.TotalAmount.ToString("C2")</p>
                <p><strong>Trạng thái thanh toán:</strong> @(order.IsPaid ? "Đã thanh toán" : "Chưa thanh toán")</p>

                <h4>Chi tiết các món trong đơn hàng:</h4>
                <table>
                    <thead>
                        <tr>
                            <th>Mã món</th>
                            <th>Tên món</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Tổng giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (order.OrderDetails != null && order.OrderDetails.Any())
                        {
                            @foreach (var detail in order.OrderDetails)
                            {
                                <tr>
                                    <td>@detail.MaMon</td>
                                    <td>@detail.Menu?.TenMon</td>
                                    <td>@detail.Quantity</td>
                                    <td>@detail.UnitPrice.ToString("C2")</td>
                                    <td>@(detail.Quantity * detail.UnitPrice)</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5">Không có chi tiết món trong đơn hàng này.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <div class="btn-container">
            <a href="@Url.Action("CalculateIncome", "Order")" class="btn btn-success">Tính toán thu nhập</a>
        </div>
    </div>

</body>

</html>
