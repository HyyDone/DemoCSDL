@model AdminDACS.Models.OrderViewModel

@{
    ViewData["Title"] = "Chọn Món Ăn";
    var doAnList = Model.DanhSachMon.Where(m => m.LoaiMon == "Food").ToList();
    var doUongList = Model.DanhSachMon.Where(m => m.LoaiMon == "Beverage").ToList();
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<header>
    <h2>Đặt Món Cho Phòng: @Model.MaPhong</h2>
</header>

<div class="page-wrapper">
    <div class="container">
        <div class="menu-column">
            <form asp-action="OrderPage" method="post" asp-route-maPhong="@Model.MaPhong">
                <input type="hidden" name="MaPhong" value="@Model.MaPhong" />

                <div class="menu-columns-wrapper">
                    <div class="food-section">
                        <h3>Đồ Ăn</h3>
                        @foreach (var mon in doAnList)
                        {
                            <div class="menu-item">
                                <div>
                                    <strong>@mon.TenMon</strong> - @mon.Gia.ToString("N0")₫
                                </div>
                                <div>
                                    <label for="quantity-@mon.MaMon" class="visually-hidden">Số lượng @mon.TenMon</label>
                                    <input type="number" id="quantity-@mon.MaMon" name="Quantities[@mon.MaMon]" min="0" value="0" />
                                </div>
                            </div>
                        }
                    </div>

                    <div class="beverage-section">
                        <h3>Đồ Uống</h3>
                        @foreach (var mon in doUongList)
                        {
                            <div class="menu-item">
                                <div>
                                    <strong>@mon.TenMon</strong> - @mon.Gia.ToString("N0")₫
                                </div>
                                <div>
                                    <label for="quantity-@mon.MaMon" class="visually-hidden">Số lượng @mon.TenMon</label>
                                    <input type="number" id="quantity-@mon.MaMon" name="Quantities[@mon.MaMon]" min="0" value="0" />
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <button type="submit" class="btn">Thêm Món</button>
            </form>
        </div>

        <div class="menu-column">
            <h3>Đơn Hàng Hiện Tại</h3>
            <p><strong>Mã Phòng:</strong> @Model.MaPhong</p>

            @if (Model.OrderDetails != null && Model.OrderDetails.Count > 0)
            {
                <table>
                    <thead>
                        <tr>
                            <th>Món</th>
                            <th>Số lượng</th>
                            <th>Đơn giá</th>
                            <th>Tổng</th>
                            <th>Xoá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderDetails)
                        {
                            <tr>
                                <td>@item.Menu?.TenMon</td>
                                <td>@item.Quantity</td>
                                <td>@item.UnitPrice.ToString("N0")₫</td>
                                <td>@(item.Quantity* item.UnitPrice).ToString("N0")₫</td>
                                <td>
                                    <form asp-action="RemoveFromCart" method="post" asp-route-maPhong="@Model.MaPhong">
                                        <input type="hidden" name="orderDetailId" value="@item.OrderDetailId" />
                                        <input type="hidden" name="maPhong" value="@Model.MaPhong" />
                                        <button type="submit" class="btn">Xóa</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <form asp-action="PlaceOrder" method="post" asp-route-maPhong="@Model.MaPhong">
                    <input type="hidden" name="maPhong" value="@Model.MaPhong" />
                    <button type="submit" class="btn btn-primary">Hoàn tất Đặt Món</button>
                </form>
            }
            else
            {
                <p>Chưa có món nào được chọn.</p>
            }
        </div>
    </div>
</div>

<style>
    .page-wrapper {
        display: flex;
        justify-content: center;
        background-color: #f5f8fa;
        padding: 20px;
        box-sizing: border-box;
    }

    body {
        font-family: Arial, sans-serif;
        margin: 0;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        gap: 30px;
        margin-top: 20px;
        box-sizing: border-box;
        padding: 10px;
        background-color: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        min-height: 600px;
    }

    .menu-column {
        background: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        overflow-y: auto;
        box-sizing: border-box;
    }

        .menu-column:first-child {
            flex: 2;
            max-width: 780px;
        }

        .menu-column:last-child {
            flex: 1;
            max-width: 360px;
        }

        .menu-column h3 {
            margin-bottom: 20px;
            border-bottom: 3px solid #007bff;
            padding-bottom: 8px;
            color: #007bff;
            font-weight: 600;
            font-size: 1.5rem;
        }

    .menu-columns-wrapper {
        display: flex;
        gap: 30px;
    }

    .food-section, .beverage-section {
        background: #ffffff;
        border-radius: 8px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.05);
        padding: 15px;
        flex: 1;
        max-height: 520px;
        overflow-y: auto;
    }

        .food-section h3, .beverage-section h3 {
            margin-bottom: 20px;
            border-bottom: 3px solid #007bff;
            padding-bottom: 8px;
            color: #007bff;
            font-weight: 600;
            font-size: 1.5rem;
        }

    .menu-item {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 12px;
        padding: 8px 12px;
        border-radius: 6px;
        transition: background-color 0.3s ease;
        cursor: default;
    }

        .menu-item:hover {
            background-color: #e6f0ff;
        }

        .menu-item div {
            flex: 1;
            font-size: 1.1rem;
        }

        .menu-item strong {
            font-weight: 600;
        }

    input[type=number] {
        width: 70px;
        padding: 6px 8px;
        border-radius: 5px;
        border: 1.5px solid #ccc;
        font-size: 1rem;
        text-align: center;
        transition: border-color 0.3s ease;
    }

        input[type=number]:focus {
            border-color: #007bff;
            outline: none;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        font-size: 1rem;
    }

        table th, table td {
            border: 1px solid #ccc;
            padding: 10px 12px;
            text-align: center;
        }

        table th {
            background-color: #007bff;
            color: white;
            font-weight: 600;
            font-size: 1.1rem;
        }

    .btn {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 18px;
        border-radius: 6px;
        cursor: pointer;
        transition: background-color 0.25s ease;
        font-size: 1.1rem;
        font-weight: 600;
        width: 100%;
        margin-top: 15px;
    }

        .btn:hover {
            background-color: #0056b3;
        }

    .btn-primary {
        margin-top: 25px;
    }
</style>
